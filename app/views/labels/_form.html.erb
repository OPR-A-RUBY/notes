<%= form_with(model: label, local: true) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
        <% label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, rows: 2, style: 'width:100%;' %>
  </div>

  <!-- Закоментировали данный блок, т.к. значение теперь будет подтягиваться автоматом в контроллере -->
  <!-- 
  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div> -->

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 5, style: 'width:100%;' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
