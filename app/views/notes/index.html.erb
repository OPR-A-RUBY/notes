<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>User</th>
      <th>Label</th>
      <th>Public</th>
      <th>Level</th>
      <th>Stars</th>
      <th>Description</th>
      <th>Body</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.id %></td>
        <td><%= note.title %></td>
        <td><%= note.user_id %></td>
        <td><%= note.label_id %></td>
        <td><%= note.public %></td>
        <td><%= note.level %></td>
        <td><%= note.stars %></td>
        <td><%= note.description %></td>
        <td><%= note.body %></td>
        <td><%= note.url %></td>
        <td><%= link_to 'Show', note %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_note_path(note) %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
