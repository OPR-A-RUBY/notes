<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @note.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @note.user_id %>
</p>

<p>
  <strong>Label:</strong>
  <%= @note.label_id %>
</p>

<p>
  <strong>Public:</strong>
  <%= @note.public %>
</p>

<p>
  <strong>Level:</strong>
  <%= @note.level %>
</p>

<p>
  <strong>Stars:</strong>
  <%= @note.stars %>
</p>

<p>
  <strong>Description:</strong>
  <%= @note.description %>
</p>

<p>
  <strong>Body:</strong>
  <%= @note.body %>
</p>

<p>
  <strong>Url:</strong>
  <%= @note.url %>
</p>

<%= link_to 'Back to Notes',  notes_path, class: 'btn btn-info btn-sm', title: 'Show notes'%>

<% if current_user.id == @note.user_id then %>
  <%= link_to 'Edit', edit_note_path(@note), class: 'btn btn-outline-warning btn-sm'%>
  <%= link_to 'Destroy', notes_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
<% end %>

<p></p>